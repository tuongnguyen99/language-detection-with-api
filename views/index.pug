doctype html
head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS
  meta(name="keywords", content="NLP, Language, Language detection, Language indentification, identities, Simple NLP api")
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
  title Hello, world!
.container.mt-5
  .row
    .col-12.fixed-bottom.m-5
      img(src="robot.png", width="100")
  if errors
    each error in errors
      .alert.alert-danger
        h2= error
  form(action="/", method="POST")
    .form-group
      h2 Put a string to detect
      textarea.form-control(id="input", rows="8", name="input")
      button.btn.btn-primary.mt-3 Detect
  if result
    each lang in result
      .alert.alert-success
        h3= lang.fln
        span Confidence #{lang.confidence}

